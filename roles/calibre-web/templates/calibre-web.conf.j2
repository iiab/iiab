<VirtualHost *:80>
    <Location "{{ calibreweb_url }}" >
        RequestHeader set X-SCRIPT-NAME {{ calibreweb_url }}
        RequestHeader set X-SCHEME http
        ProxyPass http://localhost:{{ calibreweb_port }}/
        ProxyPassReverse http://localhost:{{ calibreweb_port }}/
    </Location>
</VirtualHost>
