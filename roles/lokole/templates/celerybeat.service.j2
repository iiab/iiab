[Unit]
Description=Celery beat timed service
After=network.target
After=celery.service
Before=lokole_restarter.service

[Service]
Type=simple
WorkingDirectory={{ lokole_run_directory }}
EnvironmentFile={{ lokole_run_directory }}/settings.env
User={{ lokole_user }}
Group={{ lokole_user }}
ExecStart={{ lokole_venv }}/bin/celery --app=opwen_email_client.webapp.tasks beat --pidfile={{ lokole_run_directory }}/CELERY_BEAT.pid --logfile={{ lokole_log_directory }}/CELERY_BEAT.log --loglevel=info

[Install]
WantedBy=multi-user.target
