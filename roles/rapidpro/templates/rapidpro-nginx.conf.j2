location = /rp {
    return 301 /rp/;
}

location /rp/static/ {
    alias /opt/iiab/rapidpro/sitestatic/;
}

location /rp/media/ {
    alias /opt/iiab/rapidpro/media/;
}

location /rp/ {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://unix:/opt/iiab/rapidpro/run/gunicorn.sock;
}