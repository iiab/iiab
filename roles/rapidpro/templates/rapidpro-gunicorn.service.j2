[Unit]
Description=RapidPro Gunicorn App Server
After=network.target

[Service]
User={{ iiab_admin_user }}
Group=www-data
RuntimeDirectory=gunicorn
UMask=0007
WorkingDirectory={{ rapidpro_dir }}
ExecStart={{ poetry_env_path }}/bin/gunicorn temba.wsgi:application --access-logfile - --error-logfile {{ rapidpro_dir }}/gunicorn.error.log --workers 3 --bind unix:/run/gunicorn/rapidpro.sock

[Install]
WantedBy=multi-user.target
