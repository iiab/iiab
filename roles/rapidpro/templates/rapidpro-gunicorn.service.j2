[Unit]
Description=RapidPro Gunicorn App Server
After=network.target

[Service]
User={{ iiab_admin_user }}
Group=www-data
RuntimeDirectory=gunicorn
WorkingDirectory={{ rapidpro_dir }}
ExecStart={{ poetry_env_path }}/bin/gunicorn --access-logfile - --error-logfile {{ rapidpro_dir }}/gunicorn.error.log --workers 3 --bind unix:/run/gunicorn/rapidpro.sock --chmod-socket=660 temba.wsgi:application

[Install]
WantedBy=multi-user.target
