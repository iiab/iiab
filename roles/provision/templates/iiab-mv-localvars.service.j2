[Unit]
Description=Move local_vars.yml from /boot
{% if is_raspbian %}
ConditionPathExists=/boot/local_vars.yml
{% endif %}
{% if is_ubuntu %}
ConditionPathExists=/boot/firmware/local_vars.yml
{% endif %}
Before=iiab-provison.service

[Service]
Type=oneshot
RemainAfterExit=yes
{% if is_raspbian %}
ExecStart=/bin/mv /boot/local_vars.yml /etc/iiab/local_vars.yml
{% endif %}
{% if is_ubuntu %}
ExecStart=/bin/mv /boot/firmware/local_vars.yml /etc/iiab/local_vars.yml
{% endif %}
ExecStartPost=/bin/chmod 666 /etc/iiab/local_vars.yml
ExecStartPost=/bin/systemctl disable iiab-mv-localvars.service

[Install]
WantedBy=multi-user.target

